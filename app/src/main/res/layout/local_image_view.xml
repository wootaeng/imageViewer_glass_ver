<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mRelativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zoom1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/zoom2"
        android:layout_marginRight="1dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_one"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zoom2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/zoom3"
        android:layout_marginRight="1dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_two"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zoom3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/zoom4"
        android:layout_marginRight="1dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_three"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zoom4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/zoom5"
        android:layout_marginRight="1dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_four"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zoom5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_five"
        />
    <TextView
        android:id="@+id/imageStop"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="@string/imagestop"
        />

    <TextView
        android:id="@+id/imageStart"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="@string/imagestart"
        />
    <Button
        android:id="@+id/stop_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/stop_img"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/zoomV1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="@string/zoom1"/>
        <TextView
            android:id="@+id/zoomV2"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="@string/zoom2"/>
        <TextView
            android:id="@+id/zoomV3"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="@string/zoom3"/>
        <TextView
            android:id="@+id/zoomV4"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="@string/zoom4"/>
        <TextView
            android:id="@+id/zoomV5"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="@string/zoom5"/>

    </LinearLayout>

</RelativeLayout>